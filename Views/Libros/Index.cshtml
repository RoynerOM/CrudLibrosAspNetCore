@model IEnumerable<Libro>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    @if (TempData["alerta"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["alerta"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="row">
        <div class="col-md-10 mt-1">
            <h2>Lista de libros</h2>
        </div>
        <div class="col-md-2 mb-1">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Libros">Agregar un libro</a>
        </div>
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(x=> x.Id)</th>
                            <th>@Html.DisplayNameFor(x=> x.Titulo)</th>
                            <th>@Html.DisplayNameFor(x=> x.Descripcion)</th>
                            <th>@Html.DisplayNameFor(x=> x.FechaLanzamiento)</th>
                            <th>@Html.DisplayNameFor(x=> x.Autor)</th>
                            <th>@Html.DisplayNameFor(x=> x.Precio)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Titulo</td>
                                <td>@item.Descripcion</td>
                                <td>@item.FechaLanzamiento</td>
                                <td>@item.Autor</td>
                                <td>@item.Precio</td>
                                <td>
                                    <a class="btn btn-info" asp-controller="Libros" asp-action="Edit"
                                    asp-route-id="@item.Id">Editar</a>
                                    <a class="btn btn-danger" asp-controller="Libros" asp-action="Delete"
                                    asp-route-id="@item.Id">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>