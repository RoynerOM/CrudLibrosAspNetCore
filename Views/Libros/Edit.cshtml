@model Libro

@{
    ViewData["Title"] = "Editar un libro";
}


<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" method="POST">
                <input type="hidden" asp-for="Id">
                <!--Validar el modelo-->
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="Titulo"></label>
                        <input asp-for="Titulo" class="form-control" required>
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label asp-for="Descripcion"></label>
                        <input asp-for="Descripcion" class="form-control" required>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="FechaLanzamiento"></label>
                        <input asp-for="FechaLanzamiento" class="form-control"  required>
                        <span asp-validation-for="FechaLanzamiento" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Precio"></label>
                        <input asp-for="Precio" class="form-control" required>
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label asp-for="Autor"></label>
                        <input asp-for="Autor" class="form-control" required>
                        <span asp-validation-for="Autor" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mt-3">
                        <input type="submit" class="btn btn-warning text-white" value="Guardar">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    @{<partial name="_ValidationScriptsPartial"/>}
}